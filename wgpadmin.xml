<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>


    <parent>
        <groupId>nl.tkp</groupId>
        <artifactId>superpom</artifactId>
        <version>2.0.31</version>
    </parent>

    <groupId>nl.tkp.wgp.wgpadmin</groupId>
    <artifactId>wgp-admin</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>WGP Admin parent</name>
    <description>Applicatie voor het beheer van WGP</description>

    <properties>
        <gi-backend.version>2.1.173</gi-backend.version>
        <tkp-commons.version>2.1.21</tkp-commons.version>

        <nl.tkp.hibernate.Oracle10gDialect.version>1.0.0</nl.tkp.hibernate.Oracle10gDialect.version>
        <org.hibernate.core.version>4.2.2.Final</org.hibernate.core.version>

        <org.glassfish.version>3.2-b06</org.glassfish.version>

        <org.slf4j.version>1.7.5</org.slf4j.version>
        <rest.hazelcast.version>1.0.12</rest.hazelcast.version>
        <enunciate.version>1.27</enunciate.version>
        <cucumber.version>1.1.5</cucumber.version>
        <cobertura-plugin.version>2.6</cobertura-plugin.version>
        <gsi.version>1.1.31</gsi.version>

        <junitreporter.version>1.0.18</junitreporter.version>
        <!-- Welke database versie is nodig bij deze versie van WGP Admin -->
        <wgp.admin.liquibase.version>1.0.19</wgp.admin.liquibase.version>
    </properties>

    <modules>
        <module>wgp-admin-jar</module>
        <module>wgp-admin-client-jar</module>
        <module>wgp-admin-war</module>
        <module>wgp-admin-ear</module>
        <module>sensu</module>
    </modules>

    <build>
        <!-- To define the plugin version in your parent POM -->
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>cobertura-maven-plugin</artifactId>
                    <version>${cobertura-plugin.version}</version>
                    <configuration>
                        <formats>
                            <format>html</format>
                            <format>xml</format>
                        </formats>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <!-- To use the plugin goals in your POM or parent POM -->
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <version>${cobertura-plugin.version}</version>
                <configuration>
                    <formats>
                        <format>html</format>
                        <format>xml</format>
                    </formats>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>

                <configuration>
                    <properties>
                        <property>
                            <name>listener</name>
                            <value>documentation.TestReporter</value>
                        </property>
                    </properties>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>nl.tkp.junitreporter</groupId>
                        <artifactId>junitreporter</artifactId>
                        <version>${junitreporter.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>

    </build>

    <reporting>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <version>${cobertura-plugin.version}</version>
            </plugin>
        </plugins>
    </reporting>


    <scm>
        <connection>scm:git:git@git.intra.tkppensioen.nl:wgp/wgp-admin.git</connection>
        <developerConnection>scm:git:git@git.intra.tkppensioen.nl:wgp/wgp-admin.git</developerConnection>
    </scm>

</project>